{
    "compileOnSave": false,
    "compilerOptions": {
        "module": "esnext",
        "skipLibCheck": true,
        "typeRoots": ["./node_modules/@types"],
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "target": "es6",
        "lib": ["es2021", "dom"],
        "moduleResolution": "node",
        "baseUrl": "src",
        "resolveJsonModule": true,
        "allowJs": true,
        "esModuleInterop": true
    },
    "include": ["./src/**/*.ts", "./tests/**/*.ts", "./**/*.d.ts", "./capacitor.config.ts"],
    "atom": {
        "rewriteTsconfig": false
    }
}
