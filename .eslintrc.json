{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
        "@typescript-eslint"
    ],
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/eslint-recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "overrides": [
        {
            "files": [
                "cypress/**/*.ts"
            ],
            "parserOptions": {
                "project": [
                    "cypress/tsconfig.json"
                ]
            },
            "extends": [
                "plugin:cypress/recommended"
            ]
        }
    ],
    "parserOptions": {
        "ecmaVersion": 2019,
        "sourceType": "module",
        "project": "./tsconfig.json",
        "tsconfigRootDir": "."
    },
    "rules": {},
    "env": {
        "es6": true,
        "browser": true,
        "node": true
    },
    "ignorePatterns": [
        "webpack.config.js",
        "postcss.config.js",
        "tailwind.config.js"
    ]
}